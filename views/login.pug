extends layout

block content
  form(method='POST' action='/login')
    div
      label(for='email') Email:
      input#email.form-control(type='email', placeholder='name@email.com' name='email')
    div
      label(for='password') Contraseña:
      input#password.form-control(type='password', placeholder='Contraseña' name='password')
    button(type='submit') Ingresar
    a(href='/register') Registrarse
